<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="#5854D1"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtQuestionCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Questions: 1/x" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="6dp"
            android:text="Score: 0"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="22sp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="6dp"
            android:gravity="center_horizontal" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtQuestion"
            android:layout_width="match_parent"
            android:background="#9C6CF1"
            android:gravity="center"
            android:textSize="28sp"
            android:padding="10dp"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:text="What is ....?" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent" >

            <RadioButton
                android:id="@+id/radio_button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option1"
                android:background="#FFFFFF"
                android:textColor="#000"
                android:textSize="22sp"
                android:padding="12sp"
                android:layout_marginTop="10dp"
                />

            <RadioButton
                android:id="@+id/radio_button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option2"
                android:background="#FFFFFF"
                android:textColor="#000"
                android:textSize="22sp"
                android:padding="12sp"
                android:layout_marginTop="10dp"

                />

            <RadioButton
                android:id="@+id/radio_button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option3"
                android:background="#FFFFFF"
                android:textColor="#000"
                android:textSize="22sp"
                android:padding="12sp"
                android:layout_marginTop="10dp"

                />

            <RadioButton
                android:id="@+id/radio_button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option4"
                android:background="#FFFFFF"
                android:textColor="#000"
                android:textSize="22sp"
                android:padding="12sp"
                android:layout_marginTop="10dp"

                />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="35dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnconfirmnext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="#DF6960"
            android:backgroundTint="#E66565"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="#FDFDFD"
            android:textSize="20sp"
            app:backgroundTint="#DDF35145" />
    </LinearLayout>



</LinearLayout>